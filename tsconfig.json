{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "skipDefaultLibCheck": true,
    "paths": {
		"just-html": ["./packages/just-html/src/index.ts"],
		"@just-html/express-middleware": ["./packages/express-middleware/src/index.ts"],
		"@just-html/runtime": ["./packages/runtime/src/index.ts"]
    },
	"sourceMap": true
  },
  "exclude": [ "**/dist/**", "**/node_modules/**" ]
}
